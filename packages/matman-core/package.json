{
  "name": "matman-core",
  "version": "6.0.13",
  "description": "Core moudles for matman",
  "main": "lib/index.js",
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "tsc -d",
    "test": "npm run test:unit",
    "test:unit": "mocha 'test/**/*.test.{ts,tsx}'",
    "test:cover": "nyc npm run test:unit",
    "lint": "npx eslint src test --ext .ts"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "keywords": [
    "matman",
    "e2e",
    "test",
    "end-to-end"
  ],
  "author": "helinjiang",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matmanjs/matman.git"
  },
  "bugs": {
    "url": "https://github.com/matmanjs/matman/issues"
  },
  "homepage": "https://github.com/matmanjs/matman#readme",
  "dependencies": {
    "fs-extra": "^6.0.1",
    "lodash": "^4.17.15"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/expect": "^24.3.0",
    "@types/fs-extra": "^9.0.1",
    "@types/lodash": "^4.14.155",
    "@types/mocha": "^7.0.2",
    "@types/nightmare": "^2.10.4",
    "@types/node": "^14.0.11",
    "@types/puppeteer": "^3.0.0",
    "chai": "^4.2.0",
    "mocha": "^8.0.1",
    "nyc": "^15.1.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  }
}
